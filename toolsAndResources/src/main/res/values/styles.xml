<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ImageViewPokeball">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="ImageLogoPokemon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="ImageDelate">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="TextViewPokemonTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:fontFamily">@font/gotha_pro_med</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/txt_black</item>
    </style>

    <style name="TextViewPokemonName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gotha_pro_bol</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageViewCircular">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:src">@drawable/usuario</item>
        <item name="android:background">@drawable/circle_background</item>
    </style>

    <style name="ImageFullScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/usuario</item>
        <item name="android:background">@drawable/circle_background</item>
    </style>

    <style name="TextView1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/gotha_pro_bol</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#5D1600</item>
    </style>
</resources>